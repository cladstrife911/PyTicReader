# -> sudo systemctl enable tic_reader.service
# -> sudo systemctl status tic_reader.service
# -> sudo systemctl start tic_reader.service
# -> sudo systemctl stop tic_reader.service

[Unit]
Description=Tic Reader service
After=multi-user.target
#Conflicts=getty@tty1.service

[Service]
Type=simple
ExecStart=/usr/bin/python /home/pi/git_repo/PyTicReader/tic_reader.py
#StandardInput=tty-force

[Install]
WantedBy=multi-user.target